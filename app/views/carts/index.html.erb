<div style="display: flex; justify-content: center;">
  <div class="card">
   
    <div class="card-header">
      <strong>Data:</strong> <%= @cart.created_at.strftime("%d/%m/%Y") %> | <!-- Mostra apenas a data -->
      <strong>Hora:</strong> <%= @cart.created_at.strftime("%H:%M:%S") %> <!-- Mostra apenas a hora -->
    </div>
  
    
    <div class="dropdown card-footer" style="display: flex; justify-content: center;">
      <button class="btn btn-info dropdown-toggle" type="button" id="clienteDropdown<%= @cart.id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Selecione o Cliente
      </button>
      <div class="dropdown-menu" aria-labelledby="clienteDropdown<%= @cart.id %>">
        <% Client.all.each do |client| %>
          <div class="dropdown-item">
            <%= link_to client.name, show_path(cart_id: @cart.id, client_id: client.id), class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
</div>
