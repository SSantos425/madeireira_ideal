<h1>Lista de clientes</h1>
<div class="card card-primary">
  <div class="card-header">
    <strong> Cliente : Pessoa Física</strong>
  </div>
  <div class="card-body">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |cliente| %>
        <% if cliente.customer_type === 'Pessoa Fisica' %>
        <tr>
          <td><%= cliente.name %></td>        
          <td>
            <%= link_to "Detalhes", client_path(cliente), class: "btn btn-primary btn-sm", data: { turbo: false } %>
            <%= link_to "Editar", edit_client_path(cliente), class: "btn btn-warning btn-sm", data: { turbo: false } %>

          </td>
        </tr>
        <% end %>
          
        <% end %>
      </tbody>
    </table>
  </div>
</div>


