<div class="card">
  <div class="card-header">
    <div class="d-flex justify-content-between">
      <h1>Plano de Custo</h1>
      <%= link_to 'Novo Plano de Custo', expenses_path(id:@account_plan.id), class: 'btn btn-warning' %>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @account_plan.expenses.each do |expense| %>
          <tr>
            <td><%= expense.name %></td>
            <td>
              <%= link_to 'Editar', edit_expense_path(expense), data: { turbo: false }, class: 'btn btn-info btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  