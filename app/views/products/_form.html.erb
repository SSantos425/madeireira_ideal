    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <div>
          <h1> Novo Produto </h1>
        </div>
      </div>
      <div class="card-body">     
        <%= form_with model: @product do |form| %>
          <div class="form-group">
            <%= form.label :name , "Nome"%>
            <%= form.text_field :name, class: 'form-control', placeholder: 'Nome do Produto' %>
            <% @product.errors.full_messages_for(:name).each do |message| %>
              <div style="color: red;"><%= "Campo não preenchido"%></div>
            <% end %>
          </div>

          <div class="form-group">
            <%= form.label :unity, "Unidade" %>
            <%= form.text_field :unity, class: 'form-control', placeholder: 'Unidade' %>
            <% @product.errors.full_messages_for(:unity).each do |message| %>
              <div style="color: red;"><%= "Campo não preenchido"%></div>
            <% end %>
          </div>

          <div class="form-group">
            <%= form.label :sale_price, "Preço de Venda" %>
            <%= form.number_field :sale_price, step: 0.01, class: 'form-control', placeholder: 'Preço de Venda' %>
            <% @product.errors.full_messages_for(:sale_price).each do |message| %>
              <div style="color: red;"><%= "Campo não preenchido"%></div>
            <% end %>
          </div>

          <div class="form-group">
            <%= form.label :purchase_price, "Preço de Compra" %>
            <%= form.number_field :purchase_price, step: 0.01, class: 'form-control', placeholder: 'Preço de Compra ' %>
            <% @product.errors.full_messages_for(:purchase_price).each do |message| %>
              <div style="color: red;"><%= "Campo não preenchido"%></div>
            <% end %>
          </div>

          <div class="mt-3">
            <%= form.submit 'Salvar', class: 'btn btn-block btn-primary' %>
          </div>
          
        <% end %>
      </div>
      <!-- /.card-body -->
    </div>
<!-- /.card -->