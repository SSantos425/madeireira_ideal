<div class="card">
  <div class="card-header">
    <div class="row d-flex justify-content-between">
      <div class="col-md-5 d-flex justify-content-center">
        <div class="card border border-primary mt-2">
          <div class="mt-2 ml-2 d-flex justify-content-center"><h5>Aumentar ou Reduzir Preços Gerais</h5></div>
          <div class="card-body ">
            <div>
              <%= form_with(url: adjust_all_sale_purchase_prices_path, method: :patch) do |f| %>
                <div class="form-group">
                  <%= f.number_field :sale_percentage, placeholder: "Ex: Digite: 5, para aumentar/reduzir em 5%", step: 0.01, class: "form-control mt-2" %>
                
                  <div class="row mt-2">
                    <%= f.submit "Aumentar preço de Venda", name: "increase_sale_percentage", class: "btn btn-block btn-primary" %>
                    <%= f.submit "Aumentar preço de Compra", name: "increase_purchase_percentage", class: "btn btn-block btn-primary" %>
                  </div>
                  <div class="row mt-2">
                    <%= f.submit "Diminuir Preço de Venda", name: "decrease_sale_percentage", class: "btn btn-block btn-warning" %>
                    <%= f.submit "Diminuir Preço de Compra", name: "decrease_purchase_percentage", class: "btn btn-block btn-warning" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-7">
        <div class="card border border-primary mt-2">
          <div class="mt-2 ml-2 d-flex justify-content-center"><h5>Aumentar ou Reduzir Preços Específicos</h5></div>
          <div class="card-body">
            <div>
              <%= form_with(url: single_item_price_adjust_path, method: :patch) do |f| %>
                <div class="form-group">
                  <%= f.number_field :adjust_percentage_value, placeholder: "Ex: Digite: 5, para aumentar/reduzir em 5%", step: 0.01, class: "form-control mt-2" %>
                    <%= f.select :discount_or_addition, [["Acréscimo", "Acréscimo"], ["Desconto", "Desconto"]], { prompt: "Selecione Acréscimo ou Desconto" }, class: "form-control mt-2" %>
                    <%= f.select :purchase_or_sell, [["Venda", "Venda"], ["Compra", "Compra"]], { prompt: "Selecione Venda ou Compra" }, class: "form-control mt-2" %>
                    <%= f.select :product_name, [["Viga", "Viga"], ["Caibro", "Caibro"], ["Frechal", "Frechal"], ["Ripa", "Ripa"]], { prompt: "Selecione o Item" }, class: "form-control mt-2" %>
                    <%= f.submit "Aplicar", class: "btn btn-block btn-primary mt-2" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="card-body">
    <table class="table table-bordered table-hover text-center">
      <thead>
        <tr>
          <th>Madeira Serrada</th>
          <th>Unidade</th>
          <th>Preço de Compra</th>
          <th>Preço de Venda</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.unity %></td>
            <td><%= number_to_currency(product.purchase_price, unit: "R$", separator: ",", delimiter: ".") %></td>
            <td><%= number_to_currency(product.sale_price, unit: "R$", separator: ",", delimiter: ".") %></td>
            <td>
              <%= link_to "Editar", edit_product_path(product), class: "btn btn-warning btn-sm", data: { turbo: false } %>
              <%= link_to "Excluir", product_path(product), method: :delete, data: { confirm: "Você tem certeza?" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="card-footer">
  </div>
  </div>
</div>
