<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Lista de Compras fechadas</h3>
  </div>
  <div class="card-body">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Data Recebimento</th>
          <th>Fornecedor</th>
          <th>Nota</th>
          <th>Série</th>
          <th>Total da Nota</th>
          <th>Total Produtos</th>
          <th>Desconto</th>
          <th>Acréscimos</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @purchases.each do |purchase| %>
          <tr>
            <td><%= purchase.receipt_date %></td>
            <td><%= purchase.supplier.name %></td>
            <td><%= purchase.nota_number %></td>
            <td><%= purchase.serie %></td>
            <td><%= purchase.total_nota %></td>
            <td><%= purchase.total_products %></td>
            <td><%= purchase.discount %></td>
            <td><%= purchase.additon %></td>
            <td>
              <% if purchase.purchase_type == 1 %>
                <%= link_to "Incluir Produtos", purchase_path(purchase), class: "btn btn-primary btn-sm" %>
              <% else %>
                <%= link_to "Detalhes", purchase_path(purchase), class: "btn btn-warning btn-sm" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
