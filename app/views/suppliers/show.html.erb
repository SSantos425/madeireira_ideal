<div class="card card-primary" style="width: 110%;">
    <div class="card-header d-flex justify-content-between">
        <div class="col-11 align-self-start">
            <h1><strong>Lista de fornecedores</strong></h1>
        </div>
        <div class="col align-self-end">
            <%= link_to "Voltar", suppliers_path, class: "btn btn-warning", data: { turbo: false } %>
        </div>
    </div>
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Nome</th>
            <th>CEP</th>
            <th>Endereço</th>
            <th>Número</th>
            <th>Complemento</th>
            <th>Bairro</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>Telefone</th>
            <th>CNPJ</th>
            <th>Inscrição Estadual</th>
            <th>Nome Fantasia</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= @suppliers.name %></td>
              <td><%= @suppliers.cep %></td>
              <td><%= @suppliers.address %></td>
              <td><%= @suppliers.number %></td>
              <td><%= @suppliers.complement %></td>
              <td><%= @suppliers.district %></td>           
              <td><%= @suppliers.city %></td>
              <td><%= @suppliers.state %></td>
              <td><%= @suppliers.phone %></td>
              <td><%= @suppliers.cnpj %></td>     
              <td><%= @suppliers.state_registration %></td>
              <td><%= @suppliers.corporate_name %></td>         
            </tr>
        </tbody>
      </table>
    </div>
  </div>